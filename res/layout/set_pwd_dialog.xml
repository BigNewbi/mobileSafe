<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/dialog_title_default_icon"
        android:text="初始化密码设置"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:background="@drawable/dialog_title_background"/>
    <EditText
        android:id="@+id/et_setpwd_01"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"/>
    <EditText
        android:id="@+id/et_setpwd_02"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请确认密码"/>
    <LinearLayout
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:textColor="@color/button_text_ok"
            android:background="@drawable/setpwd_dialog_ok"
            android:id="@+id/bt_setpwddialog_ok"
            android:layout_marginRight="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="确认"/>
        <Button
            android:background="@drawable/setpwd_dialog_cancel"
             android:id="@+id/bt_setpwddialog_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="取消"/>
        </LinearLayout>

</LinearLayout>
